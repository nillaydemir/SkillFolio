@model SkillFolio.ViewModels.AnnouncementGroupsViewModel

@{
    ViewData["Title"] = "Duyuru Gruplarım";
}

<div class="container mt-4">
    <h2 class="mb-4">Duyuru Gruplarım</h2>

    @if (Model.HasSchoolGroup)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Okul Duyuruları</h4>
            </div>
            <div class="card-body">
                @foreach (var announcement in Model.SchoolAnnouncements)
                {
                    <div class="list-group-item mb-2">
                        <h5>@announcement.Title</h5>
                        <p>@announcement.Content</p>
                        <small class="text-muted">
                            @announcement.CreatedAt.ToString("dd MMMM yyyy HH:mm")
                        </small>
                    </div>
                }
            </div>
        </div>
    }

    @if (Model.HasDepartmentGroup)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Bölüm Duyuruları</h4>
            </div>
            <div class="card-body">
                @foreach (var announcement in Model.DepartmentAnnouncements)
                {
                    <div class="list-group-item mb-2">
                        <h5>@announcement.Title</h5>
                        <p>@announcement.Content</p>
                        <small class="text-muted">
                            @announcement.CreatedAt.ToString("dd MMMM yyyy HH:mm")
                        </small>
                    </div>
                }
            </div>
        </div>
    }

    @if (!Model.HasSchoolGroup && !Model.HasDepartmentGroup)
    {
        <div class="alert alert-warning">
            Profil bilgilerinizle eşleşen duyuru grubu bulunamadı.
        </div>
    }
</div>
