@model IEnumerable<SkillFolio.Models.Event>

@{
    ViewData["Title"] = "Favorilediğim Etkinliklerle İlgili Yaklaşan Duyurular";
}

<div class="container mt-4">
    <h2 class="mb-4">Favorilediğim Etkinliklerle İlgili Yaklaşan Duyurular</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Yaklaşan 7 gün içinde favorilediğiniz etkinlik bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var eventItem in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@eventItem.Title</h5>
                            <p class="card-text">
                                <strong>Etkinlik Tarihi:</strong>
                                @eventItem.EventDate.ToString("dd MMMM yyyy")
                            </p>
                            <a asp-controller="Events"
                               asp-action="Details"
                               asp-route-id="@eventItem.EventId"
                               class="btn btn-primary">
                                Etkinlik Detayları
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
