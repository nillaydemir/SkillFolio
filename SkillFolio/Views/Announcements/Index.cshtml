@model IEnumerable<SkillFolio.Models.Announcement>

@{
    ViewData["Title"] = "Duyurular";
}

<h2>Duyurular</h2>

@if (!Model.Any())
{
    <p>Henüz duyuru bulunmamaktadır.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Grup</th>
                <th>Tarih</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.AnnouncementGroup?.Name</td>
                <td>@item.CreatedAt.ToShortDateString()</td>
            </tr>
        }
        </tbody>
    </table>
}
