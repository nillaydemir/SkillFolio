@model IEnumerable<SkillFolio.Models.Event>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="hero-banner p-5 text-center shadow-lg mb-5"
     style="background-image: url('https://picsum.photos/1200/400?random=1'); background-size: cover; background-position: center;">
    <div style="background-color: rgba(255, 255, 255, 0.85); padding: 30px; border-radius: 10px;">
        <h1 class="display-4 fw-bold text-primary">SkillFolio: Kariyerine Yön Ver.</h1>
        <p class="col-lg-8 mx-auto lead mb-4">
            Okul ve kariyer etkinliklerini tek bir yerde toplayın. Sertifikalarınızı yönetin, becerilerinizi sergileyin.
        </p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a asp-controller="Events" asp-action="Index"
               class="btn btn-primary btn-lg px-4 me-sm-3">
                Tüm Etkinlikleri Keşfet
            </a>

            @if (!User.Identity.IsAuthenticated)
            {
                <a asp-controller="Account" asp-action="Register"
                   class="btn btn-outline-secondary btn-lg px-4">
                    Hemen Kayıt Ol
                </a>
            }
        </div>
    </div>
</div>

<div class="container my-5">
    <h2 class="text-center mb-5 text-secondary">
        ✨ Fırsatları Kaçırma: Öne Çıkanlar
    </h2>
    
    @if (!Model.Any())
    {
        <p class="text-muted">
            Şu anda öne çıkan etkinlik bulunmamaktadır.
        </p>
    }

    <div class="row align-items-start">
         <!-- SOL: TAKVİM -->
        <div class="col-lg-4 mb-4">
            <div class="soft-card">
                <h5 class="text-center mb-3">
                    📅 Etkinlik Takvimi
                </h5>

                @await Html.PartialAsync(
                    "_Calendar",
                    (SkillFolio.ViewModels.CalendarViewModel)ViewBag.Calendar
                )
            </div>
        </div>

        <!-- SAĞ: ETKİNLİKLER -->
        <div class="col-lg-8">
            <div class="row">
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card event-card shadow-sm h-100">
                                <img src="@item.ImagePath"
                                     class="card-img-top"
                                     style="height:180px; object-fit:cover;" />

                                <div class="card-body">
                                    <h6 class="fw-bold text-truncate">
                                        @item.Title
                                    </h6>
                                    <p class="small text-muted mb-2">
                                        @item.Category?.Name |
                                        @item.DatePosted.ToShortDateString()
                                    </p>

                                    <a asp-controller="Events"
                                       asp-action="Details"
                                       asp-route-id="@item.EventId"
                                       class="btn btn-sm btn-outline-primary">
                                        Detaylar
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
                
            </div>
        </div>

    </div>
</div>