@model IEnumerable<SkillFolio.Models.Announcement>

@{
    ViewData["Title"] = "Duyuru Yönetimi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Duyuru Yönetimi</h2>
        <a asp-action="CreateAnnouncement" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Duyuru Oluştur
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p>Henüz duyuru bulunmamaktadır.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <!--table-striped- Satırları bir açık bir koyu yapar-->
                <!--table-hover- Mouse ile üzerine gelince satırı vurgular-->
                <thead class="table-dark">
                    <tr>
                        <th>Başlık</th>
                        <th>Grup</th>
                        <th>Grup Türü</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var announcement in Model)
                    {
                        <tr>
                            <td>@announcement.Title</td>
                            <td>@announcement.AnnouncementGroup?.Name</td>
                            <td>
                                @if (announcement.AnnouncementGroup?.GroupType == "School")
                                {
                                    <span class="badge bg-primary">Okul</span>
                                }
                                else if (announcement.AnnouncementGroup?.GroupType == "Department")
                                {
                                    <span class="badge bg-success">Bölüm</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@announcement.AnnouncementGroup?.GroupType</span>
                                }
                            </td>
                            <td>@announcement.CreatedAt.ToString("dd MMMM yyyy HH:mm")</td>
                            <td>
                                <button class="btn btn-sm btn-outline-info" data-bs-toggle="modal" data-bs-target="#detailsModal@(announcement.AnnouncementId)">
                                    <i class="fas fa-eye"></i> Detay
                                </button>
                            </td>
                        </tr>

                        <!-- Details Modal -->
                        <div class="modal fade" id="detailsModal@(announcement.AnnouncementId)" tabindex="-1" aria-labelledby="detailsModalLabel@(announcement.AnnouncementId)" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="detailsModalLabel@(announcement.AnnouncementId)">@announcement.Title</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p><strong>Grup:</strong> @announcement.AnnouncementGroup?.Name</p>
                                        <p><strong>Grup Türü:</strong> @announcement.AnnouncementGroup?.GroupType</p>
                                        <p><strong>Oluşturulma Tarihi:</strong> @announcement.CreatedAt.ToString("dd MMMM yyyy HH:mm")</p>
                                        <hr>
                                        <p><strong>İçerik:</strong></p>
                                        <p>@announcement.Content</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

