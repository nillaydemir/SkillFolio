@model IEnumerable<SkillFolio.Models.Announcement>

@{
    ViewData["Title"] = "Duyuru Yönetimi";
}

<div class="container mt-4">

    <!--  YENİ DUYURU GRUBU  -->
    <div class="card p-3 mb-4">
        <h5 class="card-title">➕ Yeni Duyuru Grubu Oluştur</h5>

        <form asp-action="CreateGroup" method="post" class="row g-2">
            @Html.AntiForgeryToken()

            <div class="col-md-5">
                <input type="text"
                       name="name"
                       class="form-control"
                       placeholder="Grup adı (örn: Bilgisayar Mühendisliği)"
                       required />
            </div>

            <div class="col-md-4">
                <select name="groupType" class="form-select" required>
                    <option value="">-- Grup Türü --</option>
                    <option value="School">Okul</option>
                    <option value="Department">Bölüm</option>
                </select>
            </div>

            <div class="col-md-3">
                <button type="submit" class="btn btn-success w-100">
                    Oluştur
                </button>
            </div>
        </form>

        <small class="text-muted">
            Grup, kullanıcı profil bilgileriyle eşleşen kullanıcılara gösterilir.
        </small>

        @if (TempData["GroupSuccess"] != null)
        {
            <div class="alert alert-success mt-2">
                @TempData["GroupSuccess"]
            </div>
        }

        @if (TempData["GroupError"] != null)
        {
            <div class="alert alert-danger mt-2">
                @TempData["GroupError"]
            </div>
        }
    </div>

    <!--  DUYURULAR  -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Duyuru Yönetimi</h2>
        <a asp-action="CreateAnnouncement" class="btn btn-primary">
            Yeni Duyuru Oluştur
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            Henüz duyuru bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Başlık</th>
                        <th>Grup</th>
                        <th>Grup Türü</th>
                        <th>Oluşturulma Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var announcement in Model)
                    {
                        <tr>
                            <td>@announcement.Title</td>
                            <td>@announcement.AnnouncementGroup?.Name</td>
                            <td>
                                @if (announcement.AnnouncementGroup?.GroupType == "School")
                                {
                                    <span class="badge bg-primary">Okul</span>
                                }
                                else if (announcement.AnnouncementGroup?.GroupType == "Department")
                                {
                                    <span class="badge bg-success">Bölüm</span>
                                }
                            </td>
                            <td>@announcement.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
