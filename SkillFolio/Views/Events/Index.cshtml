@using Microsoft.AspNetCore.Identity
@using SkillFolio.Models
@inject UserManager<ApplicationUser> UserManager
@model IEnumerable<SkillFolio.Models.Event>

@{
    ViewData["Title"] = "Etkinlikleri Keşfet";

    // Admin yetkilendirmesi için kullanıcı ve rol kontrolü
    ApplicationUser currentUser = await UserManager.GetUserAsync(User);
    bool isAdmin = (currentUser != null && await UserManager.IsInRoleAsync(currentUser, "Admin"));
}

<div class="header-banner text-center py-5 mb-5" style="background: linear-gradient(to right, #f87968, #ffb3a7);">
    <h1 class="text-white display-4 fw-bold mb-4">Etkinlikleri Keşfet</h1>

    <form asp-controller="Events" asp-action="Index" method="get" class="mx-auto" style="max-width: 900px;">
        <div class="input-group">
            <input type="text" name="SearchString" value="@ViewData["CurrentSearch"]" class="form-control form-control-lg" placeholder="Katılmak istediğin etkinliği ara (Başlık, Kategori, Açıklama)" aria-label="Arama" />

            <select class="form-select form-select-lg w-auto" disabled>
                <option selected>Lokasyon</option>
            </select>
            <select name="sortOrder" class="form-select form-select-lg w-auto">
                <option value="">Sırala (Varsayılan)</option>
                <option value="Date">Tarih (Eskiden Yeniye)</option>
                <option value="date_desc">Tarih (Yeniden Eskiye)</option>
                <option value="title_desc">Başlık (Z-A)</option>
            </select>

            <button type="submit" class="btn btn-primary btn-lg">Ara</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Temizle</a>
        </div>
    </form>
</div>

<div class="container d-flex justify-content-center mb-5">
    <a href="@Url.Action("Index", "Events")" class="btn btn-outline-primary mx-1 active">Tüm Etkinlikler</a>
    <a href="#" class="btn btn-outline-secondary mx-1" disabled>Zirve</a>
    <a href="#" class="btn btn-outline-secondary mx-1" disabled>Buluşma</a>
    <a href="#" class="btn btn-outline-secondary mx-1" disabled>Sohbet</a>
</div>

@if (isAdmin)
{
    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-warning">
            <i class="fas fa-plus-circle"></i> Yeni Etkinlik Ekle
        </a>
    </div>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card event-card shadow-sm h-100">
                <img src="@item.ImagePath" class="card-img-top" alt="@item.Title" style="height: 180px; object-fit: cover;">

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text mb-2">@(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description) </p>

                    <small class="text-muted mt-auto">
                        <i class="fas fa-calendar-alt"></i> Tarih: @item.DatePosted.ToShortDateString()
                        <br />
                        <i class="fas fa-tag"></i> Kategori: @item.Category.Name
                    </small>
                    <div class="mt-3">
                    @if (!isAdmin)
                    {
                            <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-primary btn-sm">Detay Gör & Katıl</a>
                    }
                   
                     

                        @if (isAdmin)
                        {
                            <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-primary btn-sm">Detaylar</a>
                            <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-warning btn-sm">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-danger btn-sm">Sil</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center mt-5">
        Seçilen filtreye uygun etkinlik bulunamadı.
    </div>
}

@section Scripts {
    @{
        // İstemci taraflı doğrulama scriptleri için
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}